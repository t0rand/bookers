<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <% if @book.errors.any? %>
    <h1><%= @book.errors.count %> errors prohibited this book from being saved:<h1>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  <br>
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
<% end %>